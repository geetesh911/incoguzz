{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": false,
    "target": "ES2020",
    "lib": ["ES2020", "esnext.asynciterable"],
    "types": ["jest", "node"],
    "typeRoots": ["node_modules/@types"],
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "pretty": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": false,
    "outDir": "./dist",
    "allowJs": true,
    "noEmit": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"],
      "@configs/*": ["configs/*"],
      "@controllers/*": ["controllers/*"],
      "@databases": ["databases"],
      "@dtos/*": ["dtos/*"],
      "@exceptions/*": ["exceptions/*"],
      "@interfaces/*": ["interfaces/*"],
      "@middlewares/*": ["middlewares/*"],
      "@models/*": ["models/*"],
      "@routes/*": ["routes/*"],
      "@services/*": ["services/*"],
      "@utils/*": ["utils/*"],
      "@resolvers/*": ["resolvers/*"],
      "@scalers/*": ["scalers/*"],
      "@entities/*": ["entities/*"],
      "@enums/*": ["enums/*"],
      "@providers/*": ["providers/*"],
      "@strategies/*": ["strategies/*"],
      "@outputs/*": ["outputs/*"],
      "@inputs/*": ["inputs/*"],
      "@user*": ["user/*"],
      "@auth*": ["auth/*"],
      "@common*": ["common/*"],
      "@generated*": ["prisma/generated/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.json", ".env", "decs.d.ts"],
  "exclude": ["node_modules"]
}
